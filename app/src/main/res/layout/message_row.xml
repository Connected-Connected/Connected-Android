<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageRow">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/thumbNailImage"
        android:src="@drawable/ic_account_circle_black_48dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        app:civ_shadow="false"
        app:civ_shadow_radius="0"
        app:civ_shadow_color="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_comment_black_24dp"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/idLocation"
        android:layout_toLeftOf="@+id/comment"
        android:layout_toStartOf="@+id/comment"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:id="@+id/watch"
        android:textSize="15sp"
        android:layout_alignTop="@+id/idLocation"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:layout_marginRight="10dp"
        android:textColor="?attr/colorControlNormal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_remove_red_eye_black_24dp"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/idLocation"
        android:layout_toLeftOf="@+id/watch"
        android:layout_toStartOf="@+id/watch"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:id="@+id/comment"
        android:textSize="15sp"
        android:layout_alignTop="@+id/idLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:textColor="?attr/colorControlNormal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/message"
        android:textStyle="normal|bold"
        android:textSize="23sp"
        android:layout_alignTop="@+id/thumbNailImage"
        android:layout_toRightOf="@+id/thumbNailImage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idLocation"
        android:textColor="?attr/colorControlNormal"
        android:textSize="15sp"
        android:text="id ( location ) "
        android:layout_below="@+id/isCamera"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imageView6"
        android:layout_toRightOf="@+id/thumbNailImage"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp"
        android:id="@+id/isCamera"
        android:layout_alignTop="@+id/message"
        android:layout_toLeftOf="@+id/isNew"
        android:layout_toStartOf="@+id/isNew"
        android:layout_marginRight="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:id="@+id/isNew"
        android:textSize="23sp"
        android:textColor="@color/common_signin_btn_default_background"
        android:layout_alignTop="@+id/message"
        android:layout_alignRight="@+id/comment"
        android:layout_alignEnd="@+id/comment"
        android:layout_marginRight="5dp" />
</RelativeLayout>